#!/bin/bash

jarname="FredBoat-1.0.jar"
discordircname="discordirc.json"
rroguebotname="rroguebot.pl"
tailname="logs/bot-"

localp="/home/sour/Bins"

javavar=0
perlvar=0
nodevar=0

boot_rroguebot(){
  cd $localp
  cd rroguebot
  rm logs/*
  cd bin
  sleep 5
  ./boot-bot
}

boot_fredboat(){
  cd $localp
  cd fredbot
  rm logs/*
  sleep 5
  java -jar -Xmx128m $jarname
}

boot_discordirc(){
  cd /home/sour/Repos/discord-irc
  rm *.log*
  sleep 5
  npm start -- --config /home/sour/Documents/discordirc.json
}

for i in `pidof java`
do
  if cat /proc/$i/cmdline | grep -q "$jarname" 
  then
    javavar=1
  fi
done

if [ $javavar -eq 0 ]
then
  boot_fredboat &
fi

for i in `pidof node`
do
  if cat /proc/$i/cmdline | grep -q "$discordircname"
  then
    nodevar=1
  fi
done

if [ $nodevar -eq 0 ]
then
  boot_discordirc &
fi

for i in `pidof perl`
do
  if cat /proc/$i/cmdline | grep -q "$rroguebotname"
  then
    perlvar=1
  fi
done

if [ $perlvar -eq 0 ]
then
  for i in `pidof tail`
  do
    if cat /proc/$i/cmdline | grep -q "$tailname"
    then
      kill $i
    fi
  done

  boot_rroguebot &
fi
